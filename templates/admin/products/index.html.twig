{% extends 'base.html.twig' %}

{% block title %}Administration des produits{% endblock %}

{% block body %}
    <div class="bg-success pb-5">
        <div class="container">
            <div class="text-center text-white py-4">
                <h3 class="fw-light">Administration des produits</h3>
            </div>                               
                <div class="card mb-4 shadow-lg">
                    <div class="card-header">
                        <a href="{{path('admin_products_add')}}" class="btn btn-success btn-sm"><i class="bi bi-plus-square-fill"></i> Ajouter un produit</a>
                    </div>
                    <div class="card-body">
                        <!-- Flash message -->
                        <div class="row justify-content-center">
                            <div class="col-lg-6">
                            {% include "_partials/_flash.html.twig" %}
                            </div>
                        </div>
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Catégorie</th>
                                <th scope="col">Prix</th>
                                <th scope="col">Promotion</th>
                                <th scope="col">Début</th>
                                <th scope="col">Fin</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for product in products %}
                            <tr>
                                <th scope="row">{{product.id}}</th>
                                <td>{{product.name}}</td>
                                <td>{{product.category.name}}</td>
                                <td>{{product.price}} €</td>

                                {# If no discount #}
                                {% if product.discount == 0 %}
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
                                    </div>
                                </td>
                                <td></td>
                                <td></td>
                                {# If there is a discount #}
                                {# Future discount #}
                                {% elseif (product.discount > 0) and (product.discountStart | date("d/m/Y") >= "now" | date("d/m/Y")) and (product.discountEnd | date >= "now" | date) %}
                                <td class="text-primary fw-bolder">{{product.discount}} %</td>
                                <td class="text-primary">{{ product.discountStart|date('d/m/Y') }}</td>
                                <td class="text-primary">{{ product.discountEnd|date('d/m/Y') }}</td>
                                {# Active discount #}
                                {% elseif (product.discount > 0) and (product.discountStart | date("d/m/Y") <= "now" | date("d/m/Y")) and (product.discountEnd | date >= "now" | date) %}
                                <td class="text-danger fw-bolder">{{product.discount}} %</td>
                                <td class="text-danger">{{ product.discountStart|date('d/m/Y') }}</td>
                                <td class="text-danger">{{ product.discountEnd|date('d/m/Y') }}</td>
                                {# Discount expired #}
                                {% else %}                                
                                <td class="text-secondary fst-italic">{{product.discount}} %</td>
                                <td class="text-secondary fst-italic">{{ product.discountStart|date('d/m/Y') }}</td>
                                <td class="text-secondary fst-italic">{{ product.discountEnd|date('d/m/Y') }}</td>
                                {% endif %}

                                <td class="text-end"><a href="{{ path('admin_products_edit', {id: product.id}) }}" class="btn btn-primary btn-sm me-3"><i class="bi bi-pencil-square"></i></a> <a href="{{ path('admin_products_delete', {id: product.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')"><i class="bi bi-x-circle"></i></a></td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
