{% extends 'base.html.twig' %}

{% block title %}Administration des produits{% endblock %}

{% block body %}
    <div class="bg-success pb-5">
        <div class="container">
            <div class="text-center text-white py-4">
                <h3 class="fw-light">Administration des produits</h3>
            </div>
            <!-- Flash message -->
            {% include "_partials/_flash.html.twig" %} 
                               
                <div class="card mb-4 shadow-lg">
                    <!-- <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        Tous les produits
                    </div> -->
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Catégorie</th>
                                <th scope="col">Prix</th>
                                <th scope="col">Promotion</th>
                                <th scope="col">Début</th>
                                <th scope="col">Fin</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for product in products %}
                            <tr>
                                <th scope="row">{{product.id}}</th>
                                <td>{{product.name}}</td>
                                <td>{{product.category.name}}</td>
                                <td>{{product.price}} €</td>
                                <td class="text-success fw-bolder">
                                    {% if product.discount == 0 %}
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
                                    </div>  
                                    {% else %}                                
                                    {{product.discount}} %
                                    {% endif %}
                                </td>
                                {% if product.discount == 0 %}
                                <td></td>
                                <td></td>
                                {% else %}
                                <td class="text-success">{{ product.discountStart|date('d/m/Y') }}</td>
                                <td class="text-success">{{ product.discountEnd|date('d/m/Y') }}</td>
                                {% endif %}
                                <td class="text-end"><a href="{{ path('admin_products_edit', {id: product.id}) }}" class="btn btn-primary btn-sm me-3"><i class="bi bi-pencil-square"></i></a> <a href="{{ path('admin_products_delete', {id: product.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')"><i class="bi bi-x-circle"></i></a></td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
