{% extends 'base.html.twig' %}

{% block title %}Administration des catégories{% endblock %}

{% block body %}
    <div class="bg-success pb-5">
        <div class="container">
            <div class="text-center text-white py-4">
                <h3 class="fw-light">Administration des catégories</h3>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-5">                               
                    <div class="card mb-4 shadow-lg">
                        <div class="card-header">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                <a href="{{path('admin_categories_add')}}" class="btn btn-primary"><i class="bi bi-plus-square-fill"></i> Ajouter une catégorie</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Flash message -->
                            <div class="row justify-content-center">
                                <div>
                                {% include "_partials/_flash.html.twig" %}
                                </div>
                            </div>
                            <table class="table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nom</th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for category in categories %}
                                <tr>
                                    <th scope="row">{{category.id}}</th>
                                    <td>{{category.name}}</td>

                                    <td class="text-end"><a href="{{ path('admin_categories_edit', {id: category.id}) }}" class="btn btn-primary btn-sm me-3"><i class="bi bi-pencil-square"></i></a></td>
                                    <td><a href="{{ path('admin_categories_delete', {id: category.id}) }}" class="btn btn-link btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ? Si vous la supprimez, tous les produits associés à cette catégorie n\'auront plus de catégorie.')"><i class="bi bi-x-circle"></i></a></td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
