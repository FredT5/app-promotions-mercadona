{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="bg-success pb-5">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header">
                                <div class="my-4">
                                    <h3 class="text-center font-weight-light">Connexion</h3>
                                    <h5 class="text-center font-weight-light">Back Office - App promotions Mercadona</h5>
                                </div>
                            </div>
                            <div class="card-body">
                                <form method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    {% if app.user %}
                                        <div class="alert alert-info mb-3">
                                            Vous êtes connecté en tant que {{ app.user.userIdentifier }}. <a href="{{ path('app_logout') }}"><br />
                                            Me déconnecter</a>
                                        </div>
                                    {% endif %}
                                    <div class="form-floating mb-3">
                                        <input class="form-control" id="inputEmail" type="email" name="email" value="{{ last_username }}" autocomplete="email" placeholder="nom@mercadona.com"  required autofocus/>
                                        <label for="inputEmail">Adresse email</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input class="form-control" id="inputPassword" type="password" name="password" autocomplete="current-password" placeholder="Mot de passe" required />
                                        <label for="inputPassword">Mot de passe</label>
                                    </div>
                                    {# <div class="form-check mb-3">
                                        <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                        <label class="form-check-label" for="inputRememberPassword">Se souvenir du mot de passe</label>
                                    </div> #}
                                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <input type="hidden" name="_csrf_token"
                                            value="{{ csrf_token('authenticate') }}"
                                        >
                                        {# <a class="small" href="#">Mot de passe oublié ?</a> #}
                                        <button class="btn btn-primary" type="submit">Me connecter</button>
                                    </div>
                                </form>
                            </div>
                            {# <div class="card-footer text-center py-3">
                                <div class="small"><a href="register.html">S'enregistrer</a></div>
                            </div> #}
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
{% endblock %}